<%= form_with(model: marker, remote: true) do |form| %>
  <% if marker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(marker.errors.count, "error") %> prohibited this marker from being saved:</h2>

      <ul>
      <% marker.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label :title, class:"form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="field mb-3">
    <%= form.label :url, class:"form-label" %>
    <%= form.text_field :url, class: "form-control" %>
  </div>
  <hr>
<%# DONE add cocoon for categories%>
  <h4>Categories</h4>


  <div id="category_markers" class="form-group">
    <div class="links form-inline">
      <%= link_to_add_association 'Add category', form, :category_markers, :partial => 'markers/category_marker_fields', class: "mt-3 mb-3"%>
    </div>
  </div>

  <hr>
  <h4>Types</h4>


  <div id="marker_types" class="form-group">
    <div class="links form-inline">
      <%= link_to_add_association 'Add type', form, :marker_types, :partial => 'markers/marker_type_fields', class: "mt-3 mb-3" %>
    </div>
  </div>





  <div class="actions">
    <%= form.submit'Create Marker', class: "mb-3 btn btn-success mt-3" %>
  </div>
<% end %>
